{% extends 'base.html.twig' %}

{% block title %}Liste des dons{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>Montant</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for donation in donations %}
                <tr>
                    <td>{{ donation.sum }} €</td>
                    <td>{{ donation.dateOfDonation | date('d-m-Y') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <button><a href={{ path('create_donation') }}>Créer un don</a></button>
{% endblock %}
